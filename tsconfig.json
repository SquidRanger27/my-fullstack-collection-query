{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "es2020",  // Corrected from "ES2020" to "es2020"
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true
  }
}
